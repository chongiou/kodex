{
  "name": "@zdjl/kodex",
  "version": "1.0.1-beta.1",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./utils/core": {
      "types": "./dist/utils/core.d.ts",
      "import": "./dist/utils/core.js",
      "require": "./dist/utils/core.cjs"
    },
    "./utils/parse-jsx-string": {
      "types": "./dist/utils/parse-jsx-string.d.ts",
      "import": "./dist/utils/parse-jsx-string.js",
      "require": "./dist/utils/parse-jsx-string.cjs"
    },
    "./utils/components": {
      "types": "./dist/utils/components.d.ts",
      "import": "./dist/utils/components.js",
      "require": "./dist/utils/components.cjs"
    },
    "./jsx-runtime": {
      "types": "./dist/index.d.ts",
      "import": "./dist/jsx-runtime.js",
      "require": "./dist/jsx-runtime.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "description": "Create ui in zdjl platform",
  "keywords": [
    "zdjl",
    "ui",
    "jsx",
    "element",
    "component"
  ],
  "license": "MIT",
  "author": "重楼 <chongiou@qq.com>",
  "type": "module",
  "scripts": {
    "build:dts": "npm run build:dts:index && npm run build:dts:parse-jsx-string",
    "build:dts:index": "dts-bundle-generator --inline-declare-global -o dist/index.d.ts src/index.ts",
    "build:dts:parse-jsx-string": "dts-bundle-generator --no-check -o dist/utils/parse-jsx-string.d.ts src/utils/parse-jsx-string.ts",
    "build": "vite build && npm run build:dts",
    "test:build": "vite build --mode test",
    "test:watch": "nodemon",
    "test:push": "node --import tsx scripts/push.ts cache/kodex.test.zjs to sdcard/自动精灵 ",
    "prerelease": "npm version prerelease --preid=beta && git push origin main --tags",
    "postversion": "git push origin main --tags"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@vitejs/plugin-react": "^4.4.1",
    "dts-bundle-generator": "^9.5.1",
    "nodemon": "^3.1.10",
    "terser": "^5.39.2",
    "tsx": "^4.19.3",
    "vite": "^6.3.3",
    "vite-mjs-to-zjs": "^1.0.3"
  },
  "homepage": "https://github.com/chongiou/kodex",
  "repository": {
    "type": "git",
    "url": "https://github.com/chongiou/kodex.git"
  },
  "bugs": {
    "url": "https://github.com/chongiou/kodex/issues"
  }
}
