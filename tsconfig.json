{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "jsx": "react-jsx",
    "jsxImportSource": "@",
    "moduleResolution": "bundler",
    "module": "ES2022",
    "target": "ES2022",
    "declaration": true,
    "lib": [
      "ES2020"
    ],
    "outDir": "dist",
    "strict": true,
    "preserveSymlinks": true,
    "skipLibCheck": false,
    "noUnusedLocals": true,
    "types": [
      "node",
    ],
  },
  "include": [
    "src", "src/test",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
